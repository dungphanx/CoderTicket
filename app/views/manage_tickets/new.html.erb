<div class="container" style="margin-top: 70px;">
	<h3>Create new Ticket for <b><%= @event.name %></b> by <b><%= @event.owner.name %></b> host.</h3>

	<%= form_for(@ticket, url: {action: "create"}) do |f| %>
		<div class="form-group">
			<%= f.label :name, class: 'form-control-label' %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		
		<div class="row">
			<div class="col-xs-6">
				<div class="form-group">
					<%= f.label :price, class: 'form-control-label' %>
					<div class="input-group">
						<div class="input-group-addon">$</div>
						<%= f.text_field :price, class: 'form-control' %>
						<div class="input-group-addon">.00</div>
					</div>
				</div>		
			</div>
			<div class="col-xs-6">
				<div class="form-group">
					<%= f.label :max_quantity, class: 'form-control-label' %>
					<%= f.text_field :max_quantity, class: 'form-control' %>
				</div>
			</div>
		</div>
		
		<%= f.submit "Create Ticket", class: 'btn btn-primary' %>

		
	<% end %>
</div>