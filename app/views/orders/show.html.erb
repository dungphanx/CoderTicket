<div class="container-fluid tickets-buy">
  <div class="row tickets-header">
    <div class="col-xs-12 col-md-11 col-md-offset-1">
      <h3> <%= @event.name %> </h3>
      <div class="pull-left">
        <%= fa_icon 'map-marker' %>
      </div>
      <div class="venue-details">
       <%= @event.venue.name %>
       <br/>
       <%= @event.venue.full_address %>
      </div>

      <div class="pull-left">
        <%= fa_icon 'clock-o' %>
      </div>
      <div class="time-details"> 
        <%= @event.starts_at.strftime('%A, %d %b %Y %l:%M %p') %> 
      </div>
    </div>
  </div>
</div>
<div class="container">
	<p>Congratulations! You bought ticket successful</p>
	<div class="row">
		<div class="col-xs-8">
			<table class="table">
				<thead>
					<tr>
						<th>Ticket Type</th>
						<th>Price</th>
						<th>Quantity</th>
						<th>Total</th>
					</tr>
				</thead>
				<tbody>
					<% @order.order_details.each do |od| %>
						<tr>
							<td><%= od.ticket_type.name %></td>
							<td><%= number_to_currency(od.price, unit: 'VND ', precision: 0) %></td>
							<td><%= od.quantity %></td>
							<td><%= number_to_currency(od.total_price, unit: 'VND ', precision: 0) %></td>
						</tr>
					<% end %>
						<tr>
							<td>Total</td>
							<td></td>
							<td></td>
							<td><%= number_to_currency(@order.price, unit: 'VND ', precision: 0) %></td>
						</tr>
				</tbody>
			</table>
		</div>
		<div class="col-xs-4">
			<div class="col-xs-4">
				<p class="form-control-label">Name:</p>
				<p class="form-control-label">Phone:</p>
				<p class="form-control-label">Address:</p>
				<p class="form-control-label">Email:</p>
			</div>
			<div class="col-xs-8">
				<p class="form-control-label"><b><%= @order.name %></p>
				<p class="form-control-label"><b><%= @order.phone %></b></p>
				<p class="form-control-label"><b><%= @order.address %></b></p>
				<p class="form-control-label"><b><%= @order.email %></b></p>
			</div>
		</div>
	</div>
	
</div>