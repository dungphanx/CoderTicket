<div class="container" style="margin-top: 70px;">
	<h3>Create new Venue</h3>

	<%= form_for @venue do |f| %>
		<div class="form-group">
			<%= f.label :name, class: 'form-control-label' %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :full_address, class: 'form-control-label' %>
			<%= f.text_field :full_address, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :region_id, class: 'form-control-label' %>
			<%= f.select(:region_id, {:class => 'form-control'}) do %>
				<% @regions.each do |region| %>
					<%= content_tag(:option, "#{region.name}", value: region.id) %>
				<% end %>
			<% end %>
		</div>
		<%= f.submit "Create Venue", class: 'btn btn-primary' %>
	<% end %>
</div>